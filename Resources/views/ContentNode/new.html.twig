{% extends '@MMAdmin/Admin/page.html.twig' %}

{% set pageHeadline = "Contentmanagment Section" %}
{% set pageSubline = "" %}

{% block admin_page_body %}
    <div class="box box-default">
        <div class="box-header"><h2 class="box-title">Inhalt erstellen</h2></div>
        <div class="box-body">
            {% block admin_content %}
                {% set buttongroup %}
                    <div class="form-actions clearfix">
                        {{ form_widget(form.submit) }}
                        {{ form_widget(form.save_and_add) }}
                        {{ form_widget(form.save_and_back) }}

                        <a class="btn btn-warning btn-abort" href="{{ path('mm_cmf_admin_content_node_addon_contentnode') }}">
                            <i class="fa fa-close"></i> abbrechen
                        </a>
                    </div>
                {% endset %}
                {{ form_start(form) }}
                <div class="form-main col-xs-12">{{ form_rest(form) }}</div>
                <div class="form-foot col-xs-12">{{ buttongroup }}</div>
                {{ form_end(form) }}
            {% endblock %}
        </div>
    </div>
{% endblock %}